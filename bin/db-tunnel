#!/usr/bin/env bash
# Forward local port 3307 to MySQL on the Forge server.
# Run this in a terminal and leave it open; then Laravel (DB_HOST=127.0.0.1, DB_PORT=3307) will connect.
set -e
echo "Opening SSH tunnel: localhost:3307 -> 167.172.130.27:3306 (MySQL)"
echo "Leave this running. Use Ctrl+C to stop."
exec ssh -L 3307:127.0.0.1:3306 forge@167.172.130.27 -N
